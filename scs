-- Carrega a library modificada (substitua o LINK_RAW pelo seu link do GitHub)
local OrionLib = loadstring(game:HttpGet("LINK_RAW_DO_SEU_GITHUB/OrionLibFixed.lua"))()

-- Cria a Janela
local Window = OrionLib:MakeWindow({
    Name = "Meu Hub Super Top",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "MeuHubConfig"
})

-- Cria uma Tab
local Tab = Window:MakeTab({
    Name = "Scripts",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- ESCUTA O EVENTO DE FAVORITOS (Essa é a parte nova!)
-- Toda vez que alguém clicar na estrela, essa função roda.
OrionLib.FavoriteEvent.Event:Connect(function(NomeDoScript)
    print("O usuário favoritou o script: " .. NomeDoScript)
    
    -- AQUI VOCÊ ADICIONA SUA LÓGICA DE SALVAR
    -- Exemplo: Adicionar em uma tabela e salvar em json
    -- SaveFavorites(NomeDoScript) 
    
    OrionLib:MakeNotification({
        Name = "Favoritos",
        Content = "Adicionado aos favoritos: " .. NomeDoScript,
        Image = "rbxassetid://4483345998",
        Time = 3
    })
end)

-- Adiciona os Botões com o formato especial "Nome / Script Real"
-- A parte antes da "/" é o nome que aparece no botão.
-- A parte depois da "/" é o identificador único para salvar nos favoritos.
-- Se não tiver a "/", a estrela NÃO aparece.

Tab:AddButton({
    Name = "Fly V3 / fly_script_v3", -- A estrela VAI aparecer
    Callback = function()
        print("Ativando Fly...")
    end
})

Tab:AddButton({
    Name = "Speed Hack", -- A estrela NÃO vai aparecer (sem barra /)
    Callback = function()
        print("Ativando Speed...")
    end
})

OrionLib:Init()
